<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="coffee">
    <select id = "selectCoffeeList" resultType = "com.example.demo.config.api.coffee.vo.CoffeeVO" parameterType="com.example.demo.config.api.coffee.vo.CoffeeVO">
        SELECT ID AS ID
               , NAME AS NAME
          FROM COFFEE
        <if test = "name != null">
            WHERE NAME LIKE '%${name}%'
        </if>
         LIMIT #{rowNum}, #{limitNum}
    </select>

    <select id = "selectCoffee" resultType = "com.example.demo.config.api.coffee.vo.CoffeeVO" parameterType="com.example.demo.config.api.coffee.vo.CoffeeVO">
        SELECT ID AS ID
               , NAME AS NAME
          FROM COFFEE
        WHERE ID = #{id}
    </select>
</mapper>